@page "/counter"
@inject MultiLanguageWorkshop Workshop

<h1>@Workshop["ApplicationTitle"]</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


<button class="btn btn-secondary" @onclick="@(e => ChangeLanguage("en-US"))">English</button>
<button class="btn btn-secondary" @onclick="@(e => ChangeLanguage("ro-RO"))">Romanian</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    private void ChangeLanguage(string language)
    {
        Workshop.CurrentLanguage = language;
    }
}
